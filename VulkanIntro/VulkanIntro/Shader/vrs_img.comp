#version 450
#extension GL_ARB_separate_shader_objects : enable

layout(push_constant) uniform PushUniforms
{
    vec2 eyePoint;
} pushConst;

layout(binding = 0, r8ui) uniform uimage2D targetImage;

void main() {
	ivec2 uv = ivec2(gl_GlobalInvocationID.xy);
	imageStore(targetImage, uv, uvec4(0,0,0,0));
}